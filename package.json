{
  "name": "upay-demo",
  "version": "1.0.0",
  "main": "expo/AppEntry.js",
  "scripts": {
    "start": "expo start --localhost",
    "start:tunnel": "expo start --tunnel",
    "start:bff": "cd server && npm start",
    "dev:bff": "cd server && npm run dev",
    "dev": "concurrently \"npm run dev:bff\" \"npm run start\"",
    "dev:android": "adb reverse tcp:3000 tcp:3000 && adb reverse tcp:8081 tcp:8081 && concurrently \"npm run dev:bff\" \"expo start --android --localhost\"",
    "android": "expo start --android --localhost",
    "android:usb": "adb reverse tcp:8081 tcp:8081 && expo start --localhost --android",
    "android:pos": "adb reverse tcp:3000 tcp:3000 && adb reverse tcp:8081 tcp:8081 && npm run dev",
    "android:tunnel": "expo start --tunnel --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "eslint .",
    "test": "jest",
    "install:all": "npm install && cd server && npm install"
  },
  "dependencies": {
    "expo": "~50.0.0",
    "expo-status-bar": "~1.11.1",
    "react": "18.2.0",
    "react-native": "0.73.6",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "react-native-screens": "~3.29.0",
    "react-native-safe-area-context": "4.8.2",
    "react-native-gesture-handler": "~2.14.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@types/react": "~18.2.45",
    "babel-plugin-module-resolver": "^5.0.0",
    "typescript": "^5.3.3",
    "concurrently": "^8.2.2"
  },
  "private": true
}
